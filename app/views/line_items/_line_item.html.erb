<div class="columns align-items-center">
  <div class="column is-2">
    <%if line_item.book.image.url%>
      <%= image_tag(line_item.book.image.url) %>
    <%else %>
      <%=image_tag "Cover sample.jpg" %>
    <%end %>

  </div>
  <div class="column is-9">
    <strong><%= line_item.book.title %></strong>
    <div class="column align-items-center">
      <div class="content column is-9">
        <%= truncate(line_item.book.description, length: 140) %>
      </div>
      <div class="column is-3 has-text-right">
        <strong class="f4"><%=number_to_currency(line_item.total_price) %></strong>
      </div>
    </div>
  </div>
</div>

<div class="has-text-right">
  <%= link_to 'Remove Item', line_item, method: :delete, data: { confirm: "Are you sure?" } %>
</div>

<hr/>