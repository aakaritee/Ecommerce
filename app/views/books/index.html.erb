<% @books.each do |book| %>
  <div style="background-color:lightpink; padding:15px; border-radius:5px">

    <div style="float:left">
      <%= image_tag "Cover sample.jpg" %>
    </div>

    <div style="padding-left: 180px; floating:right">
      <div>
      <h1 style="font-weight:bold; float:left; font-size: x-large; padding:px">
        <%= link_to book.title, book %>
        <h1 style="font-weight:bold; float:right; font-size: xx-large">
          $<%=book.price%>
        </h1>
      </h1><br>

      <br>

      <h2>
        <%= book.author %>
      </h2>
      </div><br>

      <div>
      <%= book.description %>
      </div>
    </div>
  </div>
  <br>
<% end %>

<%= link_to 'New Book', new_book_path %>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Description</th>
    <th>Date published</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.publisher %></td>
      <td><%= book.description %></td>
      <td><%= book.date_published %></td>
      <td><%= book.price %></td>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>