

<br>
<div>

  <div style="font-size:20px; font-weight:bold; float:left">
    Recent Book Listings
    <%if admin %><%= link_to "(Admin View)", admin_path %><%end %>
  </div>


  <div style="float:right">
    <%= link_to "Sell a book", new_book_path, class:"navbar-item is-white button is-danger"%>
  </div>

</div><br>
<br>


<% @books.each do |book| %>
  <div style="background-color:lightpink; padding:15px; border-radius:5px">

    <div style="float:left">
      <%if book.image_url %>
        <%= link_to image_tag(book.image_url(:thumb)), book %>
      <%else %>
        <%=image_tag "Cover sample.jpg" %>
      <%end %>
    </div>

    <div style="padding-left: 150px">
      <div>
      <h1 style="font-weight:bold; float:left; font-size: x-large">
        <%= link_to book.title, book %>
        <h1 style="font-weight:bold; float:right; font-size: xx-large">
          $<%=book.price %>
        </h1>
      </h1><br>

      <br>

      <h2>
        <%= book.author %>
      </h2>
      </div><br>


      <div style="floating:left; min-height:90px">
      <%= truncate(book.description, length: 500) %>
      </div>

    </div>
  </div>
  <br>
<% end %>


