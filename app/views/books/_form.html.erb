<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :publisher %>
    <%= f.input :description %>
    <%= f.input :date_published %>
    <%= f.input :price %>
  </div>

  <div class="control">
    <label class="label">Add image</label>
    <div class="file">
      <label class="file-label">
        <%= f.input :image, as: :file, input_html:{ class:"file-input book-image"}, label: false, wrapper: false %>
        <span class="file-cta">
          <span class="file-icon"><i class="fa fa-upload"></i></span>
          <span class="file-label">Choose a file</span>
        </span>
      </label>
    </div>
  </div>
  <div class="columns">
    <div class="field column is-4">
      <div class="control">
        <label class="label">Condition</label>
        <div class="control has-icon-left">
          <span class="select">
            <%= f.input_field :condition, collection: Book::CONDITION, prompt: "Select condition" %>
          </span>
          <span class="icon is-small is-left">
            <i class="fa fa-tag"></i>
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
